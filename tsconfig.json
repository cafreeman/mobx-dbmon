{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "noImplicitAny": false,
        "sourceMap": true,
        "jsx": "react",
        "allowJs": true,
        "experimentalDecorators": true,
        "removeComments": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "typings/**/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}